[extdiff]
cmd.docdiff = %ProgramFiles%/TortoiseHg/docdiff.exe
cmd.vimdiff = vim
opts.vimdiff = -d
cmd.gvimdiff = gvim
opts.gvimdiff = -d

[merge-patterns]
## TortoiseHg default
#**.doc = docdiff
#**.docx = docdiff
**.xls = docdiff
**.xlsx = docdiff

**.jpeg = tortoiseidiff
**.jpg = tortoiseidiff
**.png = tortoiseidiff
**.gif = tortoiseidiff

[merge-tools]
## TortoiseHg default
#docdiff.executable = docdiff
#docdiff.regkey = Software\TortoiseHg
#docdiff.args = $local $base $other $output

# http://mercurial.selenic.com/wiki/MergingWithVim
vimdiff.executable = vim
vimdiff.args = -d $base $local $output $other +close +close
vimdiff.diffargs = -d $parent $child
vimdiff.diff3args = -d $parent1 $child $parent2
gvimdiff.executable = gvim
gvimdiff.args = -d $base $local $output $other +close +close
gvimdiff.diffargs = -d $parent $child
gvimdiff.diff3args = -d $parent1 $child $parent2
gvimdiff.gui = True

tortoiseidiff.regkey=Software\TortoiseSVN
tortoiseidiff.regkeyalt=Software\Wow6432Node\TortoiseSVN
tortoiseidiff.gui=True
tortoiseidiff.diffargs=/left:$parent /right:$child /lefttitle:'$plabel1' /righttitle:'$clabel'


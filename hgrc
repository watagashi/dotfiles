[extdiff]
cmd.docdiff = %ProgramFiles%/TortoiseHg/docdiff.exe
cmd.vimdiff = vim
opts.vimdiff = -d
cmd.gvimdiff = gvim
opts.gvimdiff = -d

[merge-patterns]
## TortoiseHg default
#**.doc = docdiff
#**.docx = docdiff
**.xls = docdiff
